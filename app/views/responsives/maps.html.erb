<%= link_to responsives_path, data: { turbo: false }, id: "logoLink" do %>
  <%= image_tag "IMG_logo1.JPG", class: "toplogo_image", id: "logoImage" %>
<% end %>

<script>
  // JavaScriptで色を変更するイベントリスナーを追加
  var logoLink = document.getElementById('logoLink');
  var logoImage = document.getElementById('logoImage');

  logoLink.addEventListener('mouseover', function() {
    logoImage.style.filter = 'brightness(80%)'; // ホバー時の効果例：明るさを80%に変更
  });

  logoLink.addEventListener('mouseout', function() {
    logoImage.style.filter = ''; // ホバーから外れたときはフィルターをクリア
  });
</script>


<script>
  document.addEventListener("DOMContentLoaded", function() {
    var mapLink = document.getElementById("map-link");
    var mapImage = document.getElementById("map-image");

    mapLink.addEventListener("mouseover", function() {
      mapImage.classList.add("hovered");
    });

    mapLink.addEventListener("mouseout", function() {
      mapImage.classList.remove("hovered");
    });
  });
</script>

<style>
  .hovered {
    /* マウスが要素上にあるときのスタイル */
    filter: brightness(80%);
    /* 例: 透明度を変えたい場合は opacity: 0.8; など */
  }
</style>

